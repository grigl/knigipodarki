<!-- .site-header -->
  <header class="site-header">
    <!-- .sh-panel -->
    <section class="panel">
      <div class="wrap">

        <nav>
          <ul>
            <li><a href="info#about">О нас</a></li>
            <li><a href="info#payment">Как покупать</a></li>
            <li><a href="info#delivery">Доставка</a></li>
            <li><a href="info#contacts">Контакты</a></li>
          </ul>
        </nav>

        <!-- .sh-login -->
        <div class="login">
          <% if current_user %>
            <%= link_to current_user.email, account_path %>
            <%= link_to t('logout'), destroy_user_session_path %>
          <% else %>
            <!-- <a href="" class="l-login">Войти</a> -->
            <%= link_to 'Войти', login_path, class: 'l-login' %>
            <a href="" class="l-registration">Зарегистрироваться</a>
          <% end %>          
          </div>
        </div>
        <!-- /.sh-login -->

        <%= render 'shared/login_form' %>
        <%= render 'shared/registration_form' %>
        <%= render 'shared/login_or_registration_errors' %>

        <div class="phone">+7 947 614-25-18</div><!-- .sh-phone -->

      </div>
    </section>
    <!-- .sh-panel -->

    <!-- .navigation -->
    <section class="navigations wrap">

      <div class="wrap-row">
        <%= link_to root_url, class: 'logo' do %>
          <img src="/images/logo.png" alt="">
        <% end %>
        
        <nav class="search">
          <form action="/products" method="get">
            <input type="text" name="keywords" placeholder="Искать">
            <input type="submit" value="3">
          </form>
        </nav>
      </div>

      <%= render 'shared/navigation' %>

    </section>
    <!-- /.navigation -->

  </header>
<!-- /.site-header -->