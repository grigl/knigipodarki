<!-- .forms -->
  <section class="forms auth">
    <h3><%= t("login_as_existing") %></h3>
    <div class="error">
      <% if flash.any? %>
        <% flash.each do |type, msg| %>
          <%= msg %>
        <% end %>
      <% end %>
    </div>
    <%= form_for(:user, :url => user_session_path) do |f| %>
      <!-- field -->
      <fieldset>
        <%= f.label(:email, t("email")) %>
        <% if flash.key?(:error) && flash[:error].include?('Неправильный адрес или пароль.') %>
          <span class="field_with_errors">
            <%= f.text_field('email') %>
          </span>
        <% else %>
          <%= f.text_field('email') %>
        <% end %>
      </fieldset>
      <!-- /field -->
      <!-- field -->
      <fieldset>
        <%= f.label :password, t("password") %>
        <% if flash.key?(:error) && flash[:error].include?('Неправильный адрес или пароль.') %>
          <span class="field_with_errors">
            <%= f.password_field 'password' %>
          </span>
        <% else %>
          <%= f.password_field 'password' %>          
        <% end %>
        <div class="remember">
          <label>
            <%= f.check_box :remember_me, :class => 'remember_check' %>
            <%= t('remember_me') %>
          </label>
          <%= link_to t("forgot_password"), new_user_password_path %>
        </div>
      </fieldset>
      <!-- /field -->
      <!-- .controls -->
      <div class="controls">
        <input class="blue" type="submit" value="Войти">
        <%= link_to t("create_a_new_account"), signup_path %>
      </div>
      <!-- /.controls -->
    <% end %>
  </section>
<!-- /.forms -->
