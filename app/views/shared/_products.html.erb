<% products.each do |product| %>
  <!-- shop-item -->
  <div structure="product-preview" class="item" href="">
    <%= link_to product do %>
      <div class="img_wrap">
        <% unless product.images.empty? %>
          <%= image_tag product.images.first.attachment.url(:product) %>
        <% else %>
          <%= image_tag '/images/noimage/one_noimage.png' %>
        <% end %>
      </div>

      <article>
        <% if product.sale_price %>
          <span class="price ops"><%= number_to_currency product.price %></span>
          <span class="price sale"><%= number_to_currency product.sale_price %></span>
        <% else %>
          <span class="price"><%= number_to_currency product.price %></span>
        <% end %>

        <h2><%= product.name %></h2>
        <p><%= product.description %></p>
      </article>
    <% end %>
    <% if product.count_on_hand > 0 %>
      <%= form_for :order, :url => populate_orders_url, remote: true do |f| %>
        <%= hidden_field_tag (product.has_variants? ? :quantity : "variants[#{product.master.id}]"), 1 %>             
        <a href="" class="add-to-cart">t</a> 
      <% end %>
    <% end %>
  </div>
  <!-- /shop-item -->
<% end %>          

      