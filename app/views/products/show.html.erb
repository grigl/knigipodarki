<%= content_for :subnav do %>
  <nav class="sub-direction-nav">
  <% if @product.category_object && @product.category_object.children.present? %>
    <ul>
      <li><%= link_to 'Все', @product.subcategory_object.parent.permalink %></li>
      <% @product.category_object.children.each do |taxon| %>
          <% if @product.subcategory == taxon.name %>
            <li class="current">
          <% else %>
            <li>
          <% end %>
            <%= link_to taxon.name, taxon.permalink %>
          </li>
      <% end %>
    </ul>
  <% end %>
  </nav>
<% end %>
<!-- .content -->
  <section class="site-content">
    <div class="white-wrap">
      <div class="wrap">
                
        <%= render 'shared/breadcrumbs' %>

        <!-- .product -->
        <section class="product">
          <!-- product image -->
          <figure>
            <% unless @product.images.empty? %>
              <%= image_tag @product.images.first.attachment.url(:large), id: 'product_image' %>
            <% else %>
              <%= image_tag '/images/noimage/one_noimage.png' %>
            <% end %>

            <% unless @product.images.empty? %>
              <ul>
                <% @product.images.each do |image| %>
                  <li><a href="<%= image.attachment.url(:large) %>" class="product_image_thumb"><%= image_tag image.attachment.url(:mini) %></a></li>
                <% end %>
              </ul>
            <% end %>
          </figure>
          <!-- /product image -->

          <!-- product content -->
          <article>
            <hgroup>
              <h4>Арт. <%= @product.sku %></h4>
              <h1><%= @product.name %></h1>
              <h2><%= @product.author %></h2>
              <% if @product.tagged_as_new %>
                <span class="marker">новинка</span>
              <% end %>
              <%= render 'product_social' %>
            </hgroup> 
            <div class="cartline">
              <div class="single_cart">
                <% if @product.sale_price %>
                  <span class="ops"><%= number_to_currency @product.price  %></span>
                  <span class="no_bord"><%= number_to_currency @product.sale_price %></span>
                <% else %>
                  <span><%= number_to_currency @product.price %></span>
                <% end %>

                <% if @product.count_on_hand > 0 %>
                  <%= form_for :order, :url => populate_orders_url, remote: true do |f| %>
                    <%= hidden_field_tag (@product.has_variants? ? :quantity : "variants[#{@product.master.id}]"), 1 %>             
                    <a href="" class="add-to-cart">t</a> 
                  <% end %>
                <% end %>
              </div>
              <% if @product.count_on_hand > 0 %>
                <span class="stock">В наличии</span>
              <% else %>
                <span class="stock">Нет в наличии</span>
              <% end %>
              <a href="/info#payment" class="payment">Способы оплаты и доставки</a>
            </div>
            <p>
              <%= @product.description %>
            </p>
          </article>
          <!-- /product content -->
          <!-- addional info -->
          <aside>
            <%= render 'product_features' %>
            <div class="product-tags">
              <% @product.tags.each do |tag| %>
                <%= link_to tag.name, products_tags_path(tag.name) %>;&nbsp;
              <% end %>
            </div>
          </aside>
          <!-- /addional info -->

        </section>
        <!-- /.product -->

        <% unless @product.related_products.empty? %>
          <!-- catalogue -->
          <section class="catalogue">

            <header>
              <h2>ЭТО ВАМ МОЖЕТ БЫТЬ ИНТЕРЕСНО</h2>
            </header>

            <%= render "shared/products", :products => @product.related_products %>
          </section>
          <!-- /catalogue -->
        <% end %>

      </div>
      <!-- /.wrap -->
    </div>
    <!-- /.white-wrap -->
  </section>
<!-- /.content -->