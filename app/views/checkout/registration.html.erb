<!-- .content -->
<div class="site-content-wrap">
  <section class="site-content">
    <div class="white-wrap">
      <div class="wrap">
      
        <!-- .account -->
        <section class="account">
          <header>
            <h1>Оформление заказа</h1>
          </header>
        </section><br /><br />
        <!-- /.account -->

        <section class="forms auth">
          <%= render 'shared/login' %>
        </section>

        <!-- .forms -->
        <section class="forms auth">
          <h3>Войти как гость</h3>
          <%= form_for @order, :url => update_checkout_registration_path, :html => { :method => :put, :id => "checkout_form_registration"} do |f| %>

            <!-- field -->
            <fieldset>
              <%= f.label :email, 'Электронная почта' %>
              <%= f.text_field :email, :class => 'title'  %>
            </fieldset>
            <!-- /field -->
            <!-- .controls -->
            <div class="controls">
              <%= submit_tag 'Продолжить' %>
            </div>
            <!-- /.controls -->
            <% if @order.errors %>
              <% if @order.errors[:email] && @order.errors[:email].include?('не может быть пустым') %>
                Поле "Email" не может быть пустым.
              <% else %>
                <% @order.errors.each do |field, msg| %>
                  Поле "<%= @order.class.human_attribute_name(field) %>" <%= msg %>.<br />
                <% end %>
              <% end %>
            <% end %>
            
          <% end %>
        </section>
        <!-- /.forms -->

      </div>
      <!-- /.wrap -->
    </div>
    <!-- /.white-wrap -->
  </section>
</div>
<!-- /.content -->