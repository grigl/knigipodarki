<!-- .content -->
  <section class="site-content">
    <div class="white-wrap">
      <div class="wrap">
        <section class="forms auth">

          <h3><%= t("new_customer") %></h3>

          <% if @user.errors %>
            <% @user.errors.full_messages.each do |msg| %>
              <%= msg %><br />
            <% end %>
          <% end %>
          <% if flash %>
            <% flash.each do |msg| %>
              <%= msg[1] %><br />
            <% end %>
          <% end %>

          <%= form_for(:user, :url => registration_path(@user), html: {autocomplete: :off}) do |f| %>
            <fieldset>
              <%= f.label :email, t("email") %>
              <%= f.text_field :email, :class => 'title'  %>
            </fieldset>
            <fieldset>
                <%= f.label :password, t("password") %>
                <%= f.password_field :password, :class => 'title'  %>
            </fieldset>

            <fieldset>
                <%= f.label :password_confirmation, t(:confirm_password) %>
                <%= f.password_field :password_confirmation, :class => 'title' %>
            </fieldset>
            <div class="controls">
              <input class="blue" type="submit" value="Сохранить">
            </div>
          <% end %>

        </section>
      </div>
      <!-- /.wrap -->
    </div>
    <!-- /.white-wrap -->
  </section>
<!-- /.content -->